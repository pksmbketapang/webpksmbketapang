<a href="{{ post.url }}" class="kabar-berita-item col col-12 sm-col-6 lg-col-6 px1 mb2">
    <amp-img class="col col-4" src="{{ post.data.image.url }}" width="100" height="100" layout="responsive"></amp-img>
    <div class="col col-8 pl1">
        <p class="h6 bold accented m0">{{ post.data.subtitle | upcase }}</p>
        <h1 class="h4 mt1 mb0">{{ post.data.title }}</h1>
        <div class="mt2 h5 xs-hide sm-hide md-hide">
            {{ post.templateContent | strip_html | truncate: 150, '...' }}
        </div>
    </div>
</a>